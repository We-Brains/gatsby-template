{
	"name": "gatsby-template",
	"version": "1.0.0",
	"private": true,
	"keywords": [
		"gatsby"
	],
	"license": "MIT",
	"main": "n/a",
	"scripts": {
		"build": "gatsby build",
		"clean": "rimraf public",
		"dev": "gatsby develop -H 0.0.0.0",
		"format": "prettier --write \"src/**/*.{ts,tsx}\"",
		"lint-css": "stylelint \"src/**/*.{scss,css}\" --fix",
		"lint": "eslint  \"src/**/*.{ts,tsx}\"",
		"start": "npm run dev",
		"test": "npm run type-check && npm run lint",
		"type-check": "tsc"
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run lint && npm run format && npm run lint-css",
			"commit-msg": "commitlint --format -E HUSKY_GIT_PARAMS"
		}
	},
	"engines": {
		"node": ">=10.0.0"
	},
	"dependencies": {
		"classnames": "^2.2.6",
		"dotenv": "^8.2.0",
		"gatsby": "^3.2.0",
		"gatsby-background-image": "^1.1.2",
		"gatsby-image": "^3.2.0",
		"gatsby-plugin-layout": "^2.2.0",
		"gatsby-plugin-manifest": "^3.2.0",
		"gatsby-plugin-react-helmet": "^4.2.0",
		"gatsby-plugin-react-svg": "^3.0.0",
		"gatsby-plugin-robots-txt": "^1.5.3",
		"gatsby-plugin-sass": "^4.2.0",
		"gatsby-plugin-sharp": "^3.2.0",
		"gatsby-plugin-sitemap": "^3.2.0",
		"gatsby-plugin-typescript": "^3.2.0",
		"gatsby-plugin-web-font-loader": "^1.0.4",
		"gatsby-source-filesystem": "^3.2.0",
		"gatsby-transformer-remark": "^3.2.0",
		"gatsby-transformer-sharp": "^3.2.0",
		"react": "^16.14.0",
		"react-dom": "^16.13.1",
		"react-helmet": "^5.2.1",
		"react-inlinesvg": "^2.0.1",
		"react-phone-input-2": "^2.13.8"
	},
	"devDependencies": {
		"@types/classnames": "^2.2.10",
		"@types/node": "^12.12.31",
		"@types/react": "^16.14.0",
		"@types/react-dom": "^16.9.5",
		"@types/react-helmet": "^5.0.15",
		"@typescript-eslint/eslint-plugin": "^4.20.0",
		"@typescript-eslint/parser": "^4.20.0",
		"commitlint": "^12.0.1",
		"eslint": "^7.23.0",
		"eslint-config-blvd": "^1.1.1",
		"eslint-config-prettier": "^8.1.0",
		"eslint-plugin-prettier": "^3.1.2",
		"firebase-tools": "^9.0.1",
		"gatsby-plugin-eslint": "^3.0.0",
		"husky": "^3.1.0",
		"node-sass": "^4.13.1",
		"prettier": "^2.2.1",
		"stylelint": "^13.2.1",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-declaration-strict-value": "^1.6.0",
		"stylelint-declaration-use-variable": "^1.7.0",
		"stylelint-high-performance-animation": "^1.5.0",
		"stylelint-order": "^4.0.0",
		"stylelint-scss": "^3.16.0",
		"typescript": "^3.8.3"
	},
	"stylelint": {
		"extends": [
			"stylelint-config-recommended",
			"stylelint-config-rational-order"
		],
		"plugins": [
			"stylelint-order",
			"stylelint-scss",
			"stylelint-config-rational-order/plugin",
			"stylelint-high-performance-animation",
			"stylelint-declaration-use-variable"
		],
		"rules": {
			"no-empty-source": [
				true,
				{
					"severity": "warning"
				}
			],
			"plugin/no-low-performance-animation-properties": [
				true,
				{
					"severity": "warning"
				}
			],
			"sh-waqar/declaration-use-variable": [
				[
					"/color/",
					"font-size",
					"font-family",
					"font-weight"
				],
				{
					"ignoreValues": [
						"transparent",
						"inherit",
						"/regexForspecialFunc/"
					]
				}
			],
			"order/properties-order": [],
			"plugin/rational-order": [
				true,
				{
					"border-in-box-model": false,
					"empty-line-between-groups": false
				}
			],
			"selector-type-no-unknown": [
				true,
				{
					"ignore": [
						"custom-elements"
					]
				}
			],
			"no-descending-specificity": true,
			"at-rule-no-unknown": null,
			"scss/at-rule-no-unknown": true
		}
	}
}
